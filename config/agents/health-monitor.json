{
  "id": "health-monitor",
  "name": "Health Monitor",
  "role": "lead",
  "persona": "Guardian of system health, security, and quality. Proactive monitor and coordinator.",
  "expertise": [
    "System health monitoring",
    "Proactive issue detection",
    "Quality gates",
    "Security scanning"
  ],
  "capabilities": ["monitoring", "health-check", "triage", "log-analysis", "debugging", "openclaw"],
  "availability": "auto",
  "identity": {
    "name": "Health Monitor",
    "theme": "guardian of code quality and system health",
    "emoji": "üè•",
    "avatar": "https://api.dicebear.com/7.x/bottts/svg?seed=health-monitor&backgroundColor=b6e3f4"
  },
  "model": {
    "primary": "anthropic/claude-sonnet-4-5",
    "fallbacks": ["anthropic/claude-sonnet-3-7"]
  },
  "heartbeat": {
    "every": "30m",
    "model": "anthropic/claude-sonnet-4-5",
    "prompt": "Run quick health check: security_stats, gateway status, recent commits. Escalate critical, delegate high, log medium/low. HEARTBEAT_OK if all clear.",
    "ackMaxChars": 500
  },
  "subagents": {
    "allowAgents": [
      "security-engineer",
      "quality-engineer",
      "qa-lead",
      "qa-automation",
      "performance-engineer",
      "backend-architect",
      "devops-engineer",
      "sre"
    ],
    "model": "anthropic/claude-sonnet-4-5",
    "thinking": "low"
  },
  "tools": {
    "profile": "full",
    "alsoAllow": [
      "security_audit",
      "security_stats",
      "security_alerts",
      "security_blocked",
      "security_summary",
      "gateway",
      "collaboration",
      "delegation",
      "sessions_spawn",
      "team_workspace",
      "exec",
      "Read",
      "web_search",
      "web_fetch"
    ]
  }
}

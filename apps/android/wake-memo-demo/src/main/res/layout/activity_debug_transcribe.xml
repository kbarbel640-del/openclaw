<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp">

  <TextView
    android:id="@+id/debugTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="DEBUG ONLY - Google SpeechRecognizer"
    android:textStyle="bold"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/debugStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="Status: idle" />

  <TextView
    android:id="@+id/debugResult"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="Result: (none)" />

  <Button
    android:id="@+id/debugStartBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Transcribe Once" />

  <Button
    android:id="@+id/debugStopBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Cancel" />
</LinearLayout>

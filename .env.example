# SotyBot Engine Configuration

# API Settings
SOTYBOT_HOST=0.0.0.0
SOTYBOT_PORT=8000
SOTYBOT_DEBUG=false
SOTYBOT_RELOAD=false

# Security
SOTYBOT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
SOTYBOT_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Agent Settings
SOTYBOT_AGENT_DIR=./agents
SOTYBOT_AGENT_TIMEOUT=300
SOTYBOT_MAX_CONCURRENT_AGENTS=10

# Action Executor Settings
SOTYBOT_ACTION_TIMEOUT=60
SOTYBOT_MAX_CONCURRENT_ACTIONS=20
SOTYBOT_ENABLE_SCRIPT_ACTIONS=true
SOTYBOT_ENABLE_HTTP_ACTIONS=true

# Database (Optional - for marketplace and audit logs)
SOTYBOT_DATABASE_URL=postgresql://sotybot:sotybot@postgres:5432/sotybot
# For SQLite: sqlite:///./sotybot.db

# Redis (for agent coordination and caching)
SOTYBOT_REDIS_URL=redis://redis:6379/0

# Marketplace Settings
SOTYBOT_MARKETPLACE_ENABLED=true
SOTYBOT_MARKETPLACE_AUTO_UPDATE=true

# Permission Settings
SOTYBOT_REQUIRE_APPROVAL_FOR_CRITICAL=true
SOTYBOT_REQUIRE_APPROVAL_FOR_AUTOMATION=false
SOTYBOT_ENABLE_TRUST_SCORING=true

# Audit Logging
SOTYBOT_AUDIT_ENABLED=true
SOTYBOT_AUDIT_LOG_FILE=./logs/audit.log
SOTYBOT_AUDIT_RETENTION_DAYS=90

# External API Keys (for example agents)
# Security Agent
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
ALIENVAULT_API_KEY=your-alienvault-api-key-here

# Crypto Agent
COINGECKO_API_KEY=your-coingecko-api-key-here
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# Sports Agent
ESPN_API_KEY=your-espn-api-key-here
SPORTSDATA_API_KEY=your-sportsdata-api-key-here

# News Agent
NEWS_API_KEY=your-newsapi-key-here

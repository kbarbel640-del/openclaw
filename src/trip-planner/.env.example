/**
 * 環境變數配置示例
 * 複製此文件為 .env.local 並填入實際的 API 密鑰
 */

# ============ 谷歌服務 ============
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ============ 天氣服務 ============
# 選擇：openweathermap 或 weatherapi
WEATHER_API_PROVIDER=openweathermap
WEATHER_API_KEY=your_weather_api_key_here

# ============ 身份驗證 ============
# 選擇：firebase 或 auth0
AUTH_PROVIDER=firebase

# Firebase
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id

# Auth0
AUTH0_DOMAIN=your_auth0_domain
AUTH0_CLIENT_ID=your_auth0_client_id

# ============ 數據庫 ============
# 選擇：postgresql、mongodb 等
DB_PROVIDER=postgresql
DATABASE_URL=postgresql://user:password@localhost:5432/trip_planner
DATABASE_SSL=false

# Redis (可選，用於快取與會話)
REDIS_URL=redis://localhost:6379

# JWT 用於本地簽章 (請設定強隨機字串)
JWT_SECRET=your_jwt_secret_here

# ============ 文件存儲 ============
# 選擇：s3、firebase、azure
STORAGE_PROVIDER=s3

# AWS S3
AWS_REGION=us-east-1
AWS_S3_BUCKET=trip-planner-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Firebase Storage
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# ============ 通知 ============
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key_here

# Email - 選擇：sendgrid 或 mailgun
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ============ 支付 ============
# 選擇：stripe、paypal
PAYMENT_PROVIDER=stripe

# Stripe
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ============ 應用設置 ============
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Sentry (錯誤追蹤，選填)
SENTRY_DSN=

# 日誌等級: debug|info|warn|error
LOG_LEVEL=info

#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/cuigx/workspace/github/openclaw/node_modules:/Users/cuigx/workspace/github/node_modules:/Users/cuigx/workspace/node_modules:/Users/cuigx/node_modules:/Users/node_modules:/node_modules:/Users/cuigx/workspace/github/openclaw/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/cuigx/workspace/github/openclaw/node_modules:/Users/cuigx/workspace/github/node_modules:/Users/cuigx/workspace/node_modules:/Users/cuigx/node_modules:/Users/node_modules:/node_modules:/Users/cuigx/workspace/github/openclaw/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../openclaw/openclaw.mjs" "$@"
else
  exec node  "$basedir/../openclaw/openclaw.mjs" "$@"
fi

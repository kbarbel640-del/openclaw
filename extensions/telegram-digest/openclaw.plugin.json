{
  "id": "telegram-digest",
  "name": "Telegram Digest",
  "description": "Telegram channel digest with LLM summarization.",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "channels": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Telegram channels to monitor (e.g., ['@durov', '@telegram'])."
      },
      "maxMessages": {
        "type": "number",
        "minimum": 1,
        "maximum": 500,
        "description": "Maximum messages to fetch per channel per invocation."
      },
      "language": {
        "type": "string",
        "description": "Summary language: 'auto' (detect from messages), 'ru', 'en', etc."
      },
      "model": {
        "type": "string",
        "description": "Override model for summarization (e.g., 'zai-org/GLM-4.7-Flash')."
      },
      "provider": {
        "type": "string",
        "description": "LLM provider for summarization (e.g., 'anthropic', 'cloudru-fm')."
      }
    }
  }
}

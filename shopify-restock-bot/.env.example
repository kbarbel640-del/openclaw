# Shopify Smart Restock Bot Configuration

# Application
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/shopify-restock-bot

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Email Notifications (optional)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=alerts@yourcompany.com

# Slack/Discord Webhooks (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Security
JWT_SECRET=your_jwt_secret_for_authentication
ENCRYPTION_KEY=your_32_character_encryption_key

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# Pricing Configuration
MONTHLY_SUBSCRIPTION_PRICE=99.00
ANNUAL_SUBSCRIPTION_PRICE=990.00

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cache Configuration
REDIS_URL=redis://localhost:6379